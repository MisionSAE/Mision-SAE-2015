/*****************************************************************************/

COUNTER HardwareCounter {
   MAXALLOWEDVALUE = 100;
   TICKSPERBASE = 1;
   MINCYCLE = 1;
   TYPE = HARDWARE;
   COUNTER = HWCOUNTER0;
};

COUNTER SoftwareCounter {
   MAXALLOWEDVALUE = 2000;
   TICKSPERBASE = 1;
   MINCYCLE = 1;
   TYPE = SOFTWARE;
};

/*****************************************************************************/
ALARM IncrementSWCounterMision {
   COUNTER = HardwareCounter;
   ACTION = INCREMENT {
      COUNTER = SoftwareCounter;
   };
   AUTOSTART = TRUE {
      APPMODE = AppModeMision;
      ALARMTIME = 1;
      CYCLETIME = 1;
   };
};

/*****************************************************************************/

RESOURCE	= POSIXR;
EVENT 		= POSIXE;
APPMODE 	= AppModeMision;
RESOURCE	= ResourceVariablesMision;
RESOURCE	= ResourceBusI2C;
RESOURCE	= ResourceUART;

/*****************************************************************************/

ISR UART0_IRQHandler {
   INTERRUPT	= UART0;
   CATEGORY		= 2;
   PRIORITY 	= 0;
};

ISR UART2_IRQHandler {
   INTERRUPT 	= UART2;
   CATEGORY 	= 2;
   PRIORITY 	= 0;
};

ISR UART3_IRQHandler {
   INTERRUPT 	= UART3;
   CATEGORY 	= 2;
   PRIORITY 	= 0;
};

};
