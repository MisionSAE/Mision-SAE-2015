/* TareaInicializacion */

TASK TareaInicializacion {
    PRIORITY	= 20;
    ACTIVATION 	= 1;
    AUTOSTART 	= TRUE {
        APPMODE = AppModeMision;
    }
    STACK 		= 512;
    TYPE 		= BASIC;
    SCHEDULE 	= NON;
    RESOURCE 	= POSIXR;
    EVENT 		= POSIXE;
}

/* TareaInicializarXBee */

TASK TareaInicializarXBee {
    PRIORITY 	= 15;
